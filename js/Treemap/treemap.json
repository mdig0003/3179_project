{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "width": 500,
  "height": 300,
  "padding": 5,
  "signals": [
    {
      "name": "method",
      "value": "squarify",
      "bind": {
        "input": "select",
        "options": [
          "squarify",
          "binary",
          "slice"
        ]
      }
    },
    {
      "name": "ratio",
      "value": 0.3,
      "bind": { "input": "range", "min": 0.3, "max": 5, "step": 0.1 }
    }
  ],

  "data": [
    {
      "name": "Median_House_Prices",
      "url": "data/Treemap/All Median House Prices.csv",
      "format": { "type": "csv" },
      "transform": [
        { "type": "nest", "keys": ["Suburb","Region"] },
        {
          "type": "treemap",
          "field": "Median House Price",
          "method": { "signal": "method" },
          "ratio": { "signal": "ratio" },
          "paddingInner": 1,
          "size": [{ "signal": "width" }, { "signal": "height" }]
        }
      ]
    }
  ],

  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": { "data": "Median_House_Prices", "field": "Region" },
      "range": { "scheme": "category20" }
    }
  ],

  "marks": [
    {
      "type": "rect",
      "from": { "data": "Median_House_Prices" },
      "encode": {
        "update": {
          "fill": { "scale": "color", "field": "Region", "opacity": 0.5 },
          "x": { "field": "x0" },
          "x2": { "field": "x1" },
          "y": { "field": "y0" },
          "y2": { "field": "y1" }
        }
      }
    },
    {
      "type": "text",
      "from": { "data": "Median_House_Prices" },
      "encode": {
        "enter": {
          "align": { "value": "center" },
          "baseline": { "value": "middle" },
          "fill": { "value": "Black" },
          "fontSize": { "value": 10 }
        },
        "update": {
          "x": { "signal": "(datum.x0 + datum.x1) / 2" },
          "y": { "signal": "(datum.y0 + datum.y1) / 2" },
          "text": { "field": "Suburb" }
        }
      }
    }
  ]
}
